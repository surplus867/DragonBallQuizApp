<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for the app bar -->
        <item name = "colorPrimary">#216af3</item>
        <!-- Darker Variant for the status bar and contextual status app bar -->
        <item name = "colorPrimaryDark">#1976D2</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name = "colorAccent">#536DFE</item>
    </style>
    <!-- Style for  radio buttons' question 1-5 on the quiz -->
    <style name="RadioButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Style for question 1-7 on the quiz -->
    <style name="FontTheme" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
    </style>
    <!-- Style for question 7's optional answers  on the quiz -->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
      <item name="android:layout_height">wrap_content</item>
      <item name="android:textSize">16sp</item>
    </style>

    <style name="editTextEntryAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:inputType">text</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
    </style>
   
</resources>
